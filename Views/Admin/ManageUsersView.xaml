<Page x:Class="SmartBook.Views.Admin.ManageUsersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:views="clr-namespace:SmartBook.Views.Components"
      Title="Manage Users"
      Background="White"
      Loaded="Page_Loaded">

    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <views:SidebarView Grid.Column="0" CurrentUsername="{Binding CurrentUsername}" />

        <!-- Main content -->
        <Grid Grid.Column="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Title + Search -->
                <RowDefinition Height="*" />    <!-- DataGrid -->
                <RowDefinition Height="Auto"/>  <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title and Search -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,20,20,10" Grid.Row="0">
                <TextBlock Text="Manage Users" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" />

                <StackPanel Orientation="Horizontal" Margin="40,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="SearchBox" Width="300" TextChanged="SearchBox_TextChanged" />
                </StackPanel>
            </StackPanel>

            <!-- Users DataGrid -->
            <DataGrid x:Name="UsersDataGrid" Grid.Row="1"
                      Margin="20,0,20,10"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      RowHeight="34"
                      HeadersVisibility="Column"
                      CellEditEnding="UsersDataGrid_CellEditEnding">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="60"/>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" IsReadOnly="True" Width="150"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" IsReadOnly="True" Width="250"/>
                    <DataGridCheckBoxColumn Header="Banned" Binding="{Binding IsBanned, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                    <DataGridTextColumn Header="Books Count" Binding="{Binding UserBooksCount}" IsReadOnly="True" Width="100" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Buttons Panel -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="20,0,20,20" HorizontalAlignment="Right">
                <Button Content="Refresh" Width="140" Click="RefreshBtn_Click" Background="#1E2D40" Foreground="White" FontWeight="Bold"/>
                <Button Content="Save Changes" Width="140" Margin="15,0,0,0" Click="SaveChangesBtn_Click" Background="#1E2D40" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
