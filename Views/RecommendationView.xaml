<Page x:Class="SmartBook.Views.RecommendationView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SmartBook.Views"
      xmlns:views="clr-namespace:SmartBook.Views.Components"
      mc:Ignorable="d"
      Title="RecommendationView"
      Background="White"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <views:SidebarView CurrentUsername="{Binding CurrentUsername}" />

        <!-- Main Content -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="20 20 20 10">
                <TextBlock Text="Recommended Books For You" FontSize="20" FontWeight="Bold" />
                <TextBlock Text="Based on books you've rated 3★ or higher and your preferences"
                           FontSize="12" Foreground="Gray" />
            </StackPanel>

            <!-- Sections -->
            <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" Margin="0 0 0 20">

                    <!-- Author-Based -->
                    <TextBlock Text="Because you like books from this author" FontWeight="SemiBold" FontSize="14"
                               Margin="0 10 0 4" />

                    <ItemsControl x:Name="AuthorBasedList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="160" Height="280" Margin="10" Background="#F9F9F9" BorderBrush="#DDD"
                                        BorderThickness="1" CornerRadius="6">
                                    <StackPanel>
                                        <Image Source="{Binding CoverImagePath}" Height="180" Stretch="UniformToFill" />
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="12"
                                                   Margin="5 2 5 0" TextWrapping="Wrap" TextAlignment="Center" />
                                        <TextBlock Text="{Binding AuthorName}" FontSize="10" Foreground="Gray"
                                                   Margin="5 0 5 0" TextAlignment="Center" />
                                        <TextBlock Text="{Binding CategoryName}" FontSize="10" Foreground="DarkGray"
                                                   Margin="5 0 5 0" TextAlignment="Center" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="No author-based recommendations yet." Foreground="Gray" FontStyle="Italic"
                               HorizontalAlignment="Center" Visibility="Collapsed">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=AuthorBasedList, Path=Items.Count}"
                                                 Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Category-Based -->
                    <TextBlock Text="Because you like this category" FontWeight="SemiBold" FontSize="14"
                               Margin="20 10 0 4" />

                    <ItemsControl x:Name="CategoryBasedList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="160" Height="280" Margin="10" Background="#F9F9F9" BorderBrush="#DDD"
                                        BorderThickness="1" CornerRadius="6">
                                    <StackPanel>
                                        <Image Source="{Binding CoverImagePath}" Height="180" Stretch="UniformToFill" />
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="12"
                                                   Margin="5 2 5 0" TextWrapping="Wrap" TextAlignment="Center" />
                                        <TextBlock Text="{Binding AuthorName}" FontSize="10" Foreground="Gray"
                                                   Margin="5 0 5 0" TextAlignment="Center" />
                                        <TextBlock Text="{Binding CategoryName}" FontSize="10" Foreground="DarkGray"
                                                   Margin="5 0 5 0" TextAlignment="Center" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="No category-based recommendations yet." Foreground="Gray" FontStyle="Italic"
                               HorizontalAlignment="Center" Visibility="Collapsed">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=CategoryBasedList, Path=Items.Count}"
                                                 Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Similar Users -->
                    <TextBlock Text="Because readers similar to you liked this" FontWeight="SemiBold" FontSize="14"
                               Margin="20 10 0 4" />

                    <ItemsControl x:Name="SimilarUsersList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="160" Height="280" Margin="10" Background="#F9F9F9" BorderBrush="#DDD"
                                        BorderThickness="1" CornerRadius="6">
                                    <StackPanel>
                                        <Image Source="{Binding CoverImagePath}" Height="180" Stretch="UniformToFill" />
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="12"
                                                   Margin="5 2 5 0" TextWrapping="Wrap" TextAlignment="Center" />
                                        <TextBlock Text="{Binding AuthorName}" FontSize="10" Foreground="Gray"
                                                   Margin="5 0 5 0" TextAlignment="Center" />
                                        <TextBlock Text="{Binding CategoryName}" FontSize="10" Foreground="DarkGray"
                                                   Margin="5 0 5 0" TextAlignment="Center" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="No recommendations from similar users yet." Foreground="Gray" FontStyle="Italic"
                               HorizontalAlignment="Center" Visibility="Collapsed">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=SimilarUsersList, Path=Items.Count}"
                                                 Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>