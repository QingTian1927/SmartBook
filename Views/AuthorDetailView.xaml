<Page x:Class="SmartBook.Views.AuthorDetailView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SmartBook.Views"
      xmlns:views="clr-namespace:SmartBook.Views.Components"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      Title="Author Details">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <views:SidebarView CurrentUsername="{Binding CurrentUsername}" />

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Back button -->
                <RowDefinition Height="Auto" /> <!-- Author Info -->
                <RowDefinition Height="*" />    <!-- Books Grid -->
            </Grid.RowDefinitions>

            <!-- Back Button -->
            <StackPanel Grid.Row="0" Margin="20" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="← Back to Authors"
                        Padding="6,3"
                        Background="#1E2D40"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BackButton_Click"
                        Width="140"
                        Cursor="Hand"/>
            </StackPanel>

            <!-- Author Info -->
            <StackPanel Grid.Row="1" Margin="20">
                <TextBlock Text="{Binding AuthorName}" FontWeight="Bold" FontSize="24" Margin="0,0,0,10" />

                <TextBlock Text="{Binding AuthorBio}" TextWrapping="Wrap" FontSize="14" Foreground="Gray" />
            </StackPanel>

            <!-- Books Grid -->
            <ScrollViewer Grid.Row="2" Margin="20" HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="BooksGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Padding="0" Margin="10" Width="160" Height="280"
                                    Background="#F9F9F9" BorderBrush="#DDD" BorderThickness="1"
                                    Cursor="Hand" Click="BookItem_Click">

                                <StackPanel>
                                    <!-- If you have cover images, bind to CoverImagePath here -->
                                    <Image Source="{Binding CoverImagePath}" Height="180" Stretch="UniformToFill" />

                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="12"
                                               Margin="5 2 5 0" TextWrapping="Wrap" TextAlignment="Center" />

                                    <TextBlock Text="{Binding CategoryName}" FontSize="10" Foreground="DarkGray"
                                               Margin="5 0 5 0" TextAlignment="Center" />

                                    <TextBlock FontSize="10" Margin="5 0 5 0" TextAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="❌ Unread" />
                                                <Setter Property="Foreground" Value="Crimson" />
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRead}" Value="True">
                                                        <Setter Property="Text" Value="✅ Read" />
                                                        <Setter Property="Foreground" Value="ForestGreen" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <TextBlock Text="{Binding Rating, StringFormat=Rating: {0}}" FontSize="10"
                                               Margin="5 0 5 0" TextAlignment="Center" />
                                </StackPanel>

                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

        </Grid>
    </Grid>
</Page>
