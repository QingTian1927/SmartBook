<Page x:Class="SmartBook.Views.CategoryDetailView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SmartBook.Views"
      xmlns:views="clr-namespace:SmartBook.Views.Components"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      Title="Category Details"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <views:SidebarView CurrentUsername="{Binding CurrentUsername}" />

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Back Button -->
                <RowDefinition Height="Auto" /> <!-- Category Info -->
                <RowDefinition Height="*" />    <!-- Books Grid -->
            </Grid.RowDefinitions>

            <!-- Back Button -->
            <StackPanel Grid.Row="0" Margin="20" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="← Back to Categories"
                        Padding="6,3"
                        Background="#1E2D40"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BackButton_Click"
                        Width="160"
                        Cursor="Hand" />
            </StackPanel>

            <!-- Category Info -->
            <StackPanel Grid.Row="1" Margin="20">
                <TextBlock Text="{Binding CategoryName}" FontWeight="Bold" FontSize="24" Margin="0,0,0,10" />
            </StackPanel>

            <!-- Books Grid -->
            <ScrollViewer Grid.Row="2" Margin="20" HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="BooksGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Padding="0" Margin="10" Width="160" Height="280"
                                    Background="#F9F9F9" BorderBrush="#DDD" BorderThickness="1"
                                    Cursor="Hand" Click="BookItem_Click">

                                <StackPanel>
                                    <!-- Bind cover image path if available -->
                                    <Image Source="{Binding CoverImagePath}" Height="180" Stretch="UniformToFill" />

                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="12"
                                               Margin="5 2 5 0" TextWrapping="Wrap" TextAlignment="Center" />

                                    <TextBlock Text="{Binding AuthorName}" FontSize="10" Foreground="Gray"
                                               Margin="5 0 5 0" TextAlignment="Center" />

                                    <TextBlock Text="{Binding Rating, StringFormat=Rating: {0}}" FontSize="10"
                                               Margin="5 0 5 0" TextAlignment="Center" />
                                </StackPanel>

                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
