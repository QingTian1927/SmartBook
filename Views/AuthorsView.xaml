<Page x:Class="SmartBook.Views.AuthorsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SmartBook.Views"
      xmlns:views="clr-namespace:SmartBook.Views.Components"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      Title="SmartBook - Authors">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar (reused) -->
        <views:SidebarView CurrentUsername="{Binding CurrentUsername}" />

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header Filters -->
            <WrapPanel Grid.Row="0" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0 0 5 0" />
                <TextBox x:Name="SearchBox" TextChanged="SearchBox_OnTextChanged" Width="300" Margin="0 0 20 0" />

                <Button Content="Add Author" Padding="6,3" Background="#1E2D40" Foreground="White" FontWeight="Bold"
                        Click="AddAuthorBtn_Click" />
            </WrapPanel>

            <!-- Author Grid -->
            <ScrollViewer Grid.Row="1" Margin="20" HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="AuthorGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Padding="0" Margin="10" Width="220" Height="160"
                                    Background="#F9F9F9" BorderBrush="#DDD" BorderThickness="1"
                                    Cursor="Hand" Click="AuthorItem_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Background" Value="#F9F9F9"/>
                                        <Setter Property="BorderBrush" Value="#DDD"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E1E9F6"/>
                                                <Setter Property="BorderBrush" Value="#1E2D40"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#CAD5F8"/>
                                                <Setter Property="BorderBrush" Value="#1E2D40"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="15"
                                               TextAlignment="Center" Margin="0,5,0,6" />
                                    <TextBlock Text="{Binding Bio}" Foreground="Gray" FontSize="13"
                                               TextWrapping="Wrap" TextAlignment="Center"
                                               Margin="0,0,0,8" MaxHeight="72" />
                                    <TextBlock Text="{Binding BookCount, StringFormat=Books: {0}}"
                                               FontSize="11" Foreground="DarkSlateGray" TextAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
